@{
    ViewData["Title"] = "Добавление телефона";
}
<h2>Форма добавления телефона</h2>
<form method="post" class="form-horizontal" role="form">
    <p>Для добавления нового телефона, заполните следующие поля:</p>
    <div class="form-group">
        <label for="Name" class="col-md-3 control-label">Введите модель телефона:</label>
        <div class="col-md-4">
            <input type="text" name="Name" class="form-control" />
        </div>
    </div>
    <div class="form-group">
        <label for="Company" class="col-md-3 control-label">Введите производителя телефона:</label>
        <div class="col-md-4">
            <input type="text" name="Company" class="form-control" />
        </div>
    </div>
    <div class="form-group">
        <label for="Price" class="col-md-3 control-label">Введите цену телефона:</label>
        <div class="col-md-4">
            <input type="text" name="Price" class="form-control" />
        </div>
    </div>
    <div class="form-group">
        <div class="col-md-4">
            <input type="submit" class="btn btn-default" value="Отправить" />
        </div>
    </div>
</form>