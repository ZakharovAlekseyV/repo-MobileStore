@model IEnumerable<MobileStore.Models.Phone>
@{
    ViewData["Title"] = "Страница редактирования";
}

<h3>Смартфоны</h3>
<table class="table-condensed">
    <tr>
        <td>Модель</td>
        <td>Производитель</td>
        <td>Цена</td>
        <td></td>
    </tr>
    @foreach (var phone in Model)
    {
        <tr>
            <td>@phone.Name</td>
            <td>@phone.Company</td>
            <td>@phone.Price</td>
            <td><a href="~/Phones/EditPhone/@phone.Id">Редактировать</a> / <a href="~/Phones/DeletePhone/@phone.Id"> Удалить</a></td>
        </tr>
    }
</table>
